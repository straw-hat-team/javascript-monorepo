{
  "packageManager": "yarn@3.6.3",
  "name": "@straw-hat/nodejs-monorepo",
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/@straw-hat/*"
  ],
  "scripts": {
    "prepare": "husky install",
    "turbo:docs:typedoc": "turbo run docs:typedoc",
    "turbo:build": "turbo run build",
    "test:jest": "yarn jest",
    "publish": "yarn workspaces foreach -v --no-private npm publish --tolerate-republish",
    "format:prettier": "prettier */** --write --ignore-unknown --no-error-on-unmatched-pattern"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-conventional": "^17.7.0",
    "@commitlint/config-lerna-scopes": "^17.7.0",
    "@straw-hat/prettier-config": "3.1.2",
    "@straw-hat/tsconfig": "workspace:*",
    "@yarnpkg/sdks": "^3.0.0-rc.51",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^14.0.1",
    "monodeploy": "^4.3.0",
    "npm-run-all": "^4.1.5",
    "prettier": "3.0.3",
    "rimraf": "^5.0.4",
    "turbo": "^1.10.14",
    "typedoc": "^0.25.1",
    "typescript": "^5.2.2"
  }
}
